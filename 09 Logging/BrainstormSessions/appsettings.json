{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Log/brainstorm_log.log" }
      },
      {
        "Name": "Email",
        "Args": {
          "fromEmail": "",
          "toEmail": "",
          "mailServer": "smtp.gmail.com",
          "NetworkCredentials ": {
            "UserName": "",
            "Password": ""
          },
          "EnableSsl": "true",
          "Port": 465,
          "EmailSubject": "log entry"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],

    "Properties": {
      "Application": "Sample"
    }
  }
}